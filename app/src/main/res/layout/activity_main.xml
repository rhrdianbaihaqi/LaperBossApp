<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warmindoo_white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_main_graphic"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/app_logo_description"
        android:src="@drawable/chef"
        android:elevation="8dp"
        android:outlineProvider="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:text="Selamat datang di"
        android:textStyle="bold"
        android:textColor="@color/warmindoo_medium_grey"
        android:textSize="18sp"
        android:letterSpacing="0.02"
        android:lineHeight="26sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_graphic"
        app:layout_constraintBottom_toTopOf="@+id/tv_title2" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:includeFontPadding="false"
        android:text="Laper Boss"
        android:textColor="@color/warmindoo_primary"
        android:textSize="46sp"
        android:textStyle="bold"
        android:shadowColor="#33E56A1A"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:text="Pesan makanan favoritmu tanpa ribet. Hangat, cepat, dan selalu nikmat!"
        android:textColor="@color/warmindoo_grey_dark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:lineHeight="24sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_now" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_now"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/warmindoo_primary"
        android:elevation="8dp"
        android:text="Mulai Pesan &amp; Dapatkan Promo"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/warmindoo_white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:cornerRadius="30dp"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Material3.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>